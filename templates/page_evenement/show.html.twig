{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ evenement.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ evenement.texte }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Published_at</th>
                <td>{{ evenement.publishedAt ? evenement.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre d'incrits</th>
                <td>{{ inscrits|length }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('inscription', {'id': evenement.id}) }}">inscription</a>

{% endblock %}
