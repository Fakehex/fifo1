{% extends 'base.html.twig' %}

{% block title %}Archives index{% endblock %}

{% block body %}
    <h1>Archives index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sujet</th>
                <th>Date</th>
                <th>SecondeSession</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for archive in archives %}
            <tr>
                <td>{{ archive.id }}</td>
                <td><a href="{{ asset('uploads/archives/' ~ archive.sujet) }}">{{archive.titre}}(PDF)</a>
</td>
                <td>{{ archive.date ? archive.date|date('Y-m-d') : '' }}</td>
                <td>{{ archive.secondeSession ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('archives_show', {'id': archive.id}) }}">show</a>
                    <a href="{{ path('archives_edit', {'id': archive.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('archives_new') }}">Create new</a>
{% endblock %}
