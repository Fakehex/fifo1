{% extends 'base.html.twig' %}

{% block title %} Page Profil {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
                <h1>Mon profil</h1>
                {{ form(form) }}
            </div>
          </div>
          <div class="col-sm-6 mt-3">
            <div class="w-80">
              <!-- Button trigger modal mdp -->
            <div class="row m-2">
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mdpModal">
            Changer mon mot de passe
          </button>
          </div>
          <div class="row  m-2">

              <!-- Button trigger modal picture-->
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#pictureModal">
            Changer mon image de profil
          </button>
        </div>

            </div>
          </div>
        </div>

    </div>


    <!-- Modal Mot de passe -->
    <div class="modal fade" id="mdpModal" tabindex="-1" role="dialog" aria-labelledby="mdpModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          {{ form_start(formMdp) }}
          <div class="modal-header">
            <h5 class="modal-title" id="mdpModalLabel">Changer mon mot de passe</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            {{ form_widget(formMdp.password) }}

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            {{ form_widget(formMdp.submit) }}
          </div>
          {{ form_end(formMdp) }}
        </div>
      </div>
    </div>

    <!-- Modal Picture-->
    <div class="modal fade" id="pictureModal" tabindex="-1" role="dialog" aria-labelledby="pictureModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          {{ form_start(formPicture) }}
          <div class="modal-header">
            <h5 class="modal-title" id="pictureModalLabel">Changer mon image de profil</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

                {{ form_widget(formPicture.picture) }}
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            {{ form_widget(formPicture.submit) }}
          </div>
          {{ form_end(formPicture) }}
        </div>
      </div>
    </div>

{% endblock %}
