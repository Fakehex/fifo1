{% extends 'base.html.twig' %}

{% block title %}Matieres{% endblock %}

{% block body %}

<div class="container">

    <table class="table table-dark">
      <tbody>
        {% for matiere in matieres %}
            <tr>
                <td><a href="{{ path('matiere', {'slugCategorie': slugCategorie,'slugMatiere': matiere.slug}) }}">{{matiere.titre}}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
      </tbody>
    </table>
</div>
{% endblock %}
